{% extends 'base.html.twig' %}

{% block title %}Ajouter un Album{% endblock %}

{% block body %}
    <h1>Ajouter un Album</h1>

    <form action="{{ path('app_gestion_add') }}" method="post">
        <div class="form-group">
            <label for="nom">Nom</label>
            <input type="text" name="nom" id="nom" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="auteur">Auteur</label>
            <input type="text" name="auteur" id="auteur" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="date">Date</label>
            <input type="date" name="date" id="date" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-success mt-3">Ajouter</button>
        <a href="{{ path('app_gestion') }}" class="btn btn-secondary mt-3">Annuler</a>
    </form>
{% endblock %}
