{% extends 'base.html.twig' %}

{% block title %}Modifier l'Album{% endblock %}

{% block body %}
    <h1>Modifier l'Album</h1>

    <form action="{{ path('app_gestion_edit', {id: album.id}) }}" method="post">
        <div class="form-group">
            <label for="nom">Nom</label>
            <input type="text" name="nom" id="nom" class="form-control" value="{{ album.nom }}" required>
        </div>
        <div class="form-group">
            <label for="auteur">Auteur</label>
            <input type="text" name="auteur" id="auteur" class="form-control" value="{{ album.auteur }}" required>
        </div>
        <div class="form-group">
            <label for="date">Date</label>
            <input type="date" name="date" id="date" class="form-control" value="{{ album.date|date('Y-m-d') }}" required>
        </div>
        <button type="submit" class="btn btn-success mt-3">Modifier</button>
        <a href="{{ path('app_gestion') }}" class="btn btn-secondary mt-3">Annuler</a>
    </form>
{% endblock %}
